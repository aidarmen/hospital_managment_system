<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".doctorSide.DoctorProfileFragment" android:background="#FFFFFF">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
    >


        <TextView
                android:text="@string/name_profile"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/doctor_profile_name"
                android:textSize="30sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000000"/>
        <!--        <ImageView-->
        <!--                android:src="@drawable/profile_image"-->
        <!--                android:layout_width="80dp"-->
        <!--                android:layout_height="80dp"-->
        <!--                android:layout_gravity="center"-->
        <!--                android:id="@+id/patinet_profile_image"-->
        <!--        />-->
        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:civ_border_width="5dp"
                android:layout_gravity="center"
                android:id="@+id/doctor_profile_image"
                app:srcCompat="@android:drawable/btn_dialog"

                app:civ_border_color="#3f51b5"
                app:civ_shadow="false"
                app:civ_shadow_radius="5dp"
                app:civ_shadow_color="#3f51b5"/>

        <TextView
                android:text="Details:"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:id="@+id/textView6"
        />
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="300dp" android:layout_marginBottom="100dp">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <LinearLayout
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="20dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:elevation="2dp"
                        android:gravity="center">

                    <TextView
                            android:layout_margin="15dp"
                            android:text="Hospital"
                            android:textSize="20sp"
                            android:gravity="left"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView1"
                            android:layout_weight="1"/>
                    <TextView
                            android:text="50kg"
                            android:layout_margin="15dp"
                            android:textSize="20sp"
                            android:gravity="right"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/doctor_profile_hospital"
                            android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_marginVertical="10dp"
                        android:layout_marginHorizontal="20dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:elevation="2dp"
                        android:gravity="center">
                    <TextView
                            android:text="Profession"
                            android:layout_margin="15dp"
                            android:textSize="20sp"
                            android:gravity="left"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView9"
                            android:layout_weight="1"/>
                    <TextView
                            android:text="180cm"
                            android:layout_margin="15dp"
                            android:textSize="20sp"
                            android:gravity="right"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/doctor_profile_profession"
                            android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_marginVertical="10dp"
                        android:layout_margin="15dp"
                        android:layout_marginHorizontal="20dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:elevation="2dp"
                        android:gravity="center">
                    <TextView
                            android:text="Phone"
                            android:layout_margin="15dp"
                            android:textSize="20sp"
                            android:gravity="left"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView11"
                            android:layout_weight="1"/>
                    <TextView
                            android:text="8(777)777 7777"
                            android:layout_margin="15dp"
                            android:textSize="20sp"
                            android:gravity="right"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/doctor_profile_phone"
                            android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_marginVertical="10dp"
                        android:layout_margin="15dp"
                        android:layout_marginHorizontal="20dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:elevation="2dp"
                        android:gravity="center|top">
                    <TextView
                            android:text="Description"
                            android:layout_margin="15dp"
                            android:textSize="20sp"
                            android:gravity="left"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView7"
                            android:layout_weight="1"/>
                    <TextView
                            android:text="some words"
                            android:layout_margin="15dp"
                            android:textSize="20sp"
                            android:gravity="right"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/doctor_profile_about"
                            android:layout_weight="1" android:maxWidth="200dp"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>