<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:gravity="center"
            xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout

            android:layout_width="300dp"
            android:layout_height="70dp"
            android:background="@drawable/layout_bg"
            android:elevation="5dp"
            android:orientation="vertical"
            android:clipToPadding="false"

            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"



    >


        <LinearLayout

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:gravity="center_horizontal">

            <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/patient_doctor_cell_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/avatar"
                    app:civ_border_color="#3f51b5"
                    app:civ_border_width="2dp"
                    app:civ_shadow="false"
                    app:civ_shadow_radius="5dp"
                    app:civ_shadow_color="#3f51b5"
                    android:layout_margin="15dp"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"
                    android:layout_marginHorizontal="10dp" android:layout_marginVertical="10dp">
                <TextView
                        android:text="Dr. Stella Count"
                        android:layout_width="wrap_content"
                        android:id="@+id/patient_doctor_cell_name"
                        android:layout_marginTop="5dp" android:textSize="20sp"
                        android:textStyle="bold" android:textColor="#3F51B5" android:layout_height="wrap_content"/>
                <TextView
                        android:text="Hospital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/patient_doctor_cell_hospital"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
